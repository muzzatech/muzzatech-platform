{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/package/**/node_modules",
    "**/package/**/build",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/build/**/*"
  ],
  "include": [
    "src/"
  ]
}
