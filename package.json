{
  "name": "@muzzatech/platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^27.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "watch": "lerna run watch --parallel",
    "deploy": "lerna publish",
    "lint": "eslint ./packages --ext .ts",
    "lint:fix": "eslint ./packages --fix --ext .ts",
    "test:log": "lerna run test --scope={@muzzatech/log}",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:lerna": "lerna run test",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff"
  },
  "repository": "git@github.com:muzzatech/muzzatech-platform.git",
  "author": "muzzatech",
  "license": "MIT"
}
